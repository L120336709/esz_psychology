            <if test="adoname != null">#{adoname},</if>
            <if test="adotype != null">#{adotype},</if>
            <if test="adoopenUid != null">#{adoopenUid},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="allClasshour != null">#{allClasshour},</if>
            <if test="jsonContent != null">#{jsonContent},</if>
            <if test="description != null">#{description},</if>
         </trim>
    </insert>

    <update id="updatePsyCCourse" parameterType="PsyCCourse">
        update psy_c_course
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null">name = #{name},</if>
            <if test="ctStartTime != null">ctStartTime = #{ctStartTime},</if>
            <if test="ctEndTime != null">ctEndTime = #{ctEndTime},</if>
            <if test="ctImgUrl != null">ctImgUrl = #{ctImgUrl},</if>
            <if test="adolargeFaceUrl != null">adolargeFaceUrl = #{adolargeFaceUrl},</if>
            <if test="adolectorDesc != null">adolectorDesc = #{adolectorDesc},</if>
            <if test="adorealName != null">adorealName = #{adorealName},</if>
            <if test="ctId != null">ctId = #{ctId},</if>
            <if test="adoname != null">adoname = #{adoname},</if>
            <if test="adotype != null">adotype = #{adotype},</if>
            <if test="adoopenUid != null">adoopenUid = #{adoopenUid},</if>
            <if test="createTime != null">createTime = #{createTime},</if>
            <if test="updateTime != null">updateTime = #{updateTime},</if>
            <if test="allClasshour != null">all_classhour = #{allClasshour},</if>
            <if test="jsonContent != null">jsonContent = #{jsonContent},</if>
            <if test="description != null">description = #{description},</if>

        </trim>
        where id = #{id}
    </update>

    <delete id="deletePsyCCourseById" parameterType="Long">
        delete from psy_c_course where id = #{id}
    </delete>

    <delete id="deletePsyCCourseByIds" parameterType="String">
        delete from psy_c_course where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>